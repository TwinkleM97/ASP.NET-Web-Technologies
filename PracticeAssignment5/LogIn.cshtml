@model TransactionRecordApp.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="LogIn" method="post">
    <div class="form-group row">
        <label asp-for="Username" class="col-sm-2 col-form-label">Username:</label>
        <div class="col-sm-4">
            <input asp-for="Username" class="form-control" />
        </div>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label">Password:</label>
        <div class="col-sm-4">
            <input asp-for="Password" type="password" class="form-control" />
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-4">
            <input asp-for="RememberMe" type="checkbox" />
            <label asp-for="RememberMe">Remember Me</label>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>
</form>
